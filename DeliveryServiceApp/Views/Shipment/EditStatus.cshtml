@model DeliveryServiceApp.Models.ShipmentMonitoringViewModel

<h3>Add new shipment status</h3>
<hr/>
<div class="row">
    <div class="col-12">
        <div class = "row">
            <div class="col-md-7">
            <br />
            <h6>Current Shipment Statuses:</h6>
            <table class="table">
	            <thead>
		            <tr>
			            <th>Shipment Status</th>
			            <th>Status Time</th>
		            </tr>
	            </thead>
	            <tbody>
		            @foreach (StatusShipmentViewModel item in @Model.ShipmentStatuses)
	               {
		               <tr>
			            <td>@item.StatusName</td>
			            <td>@item.StatusTime</td>
		            </tr>
	               }
	            </tbody>
            </table>
            </div>

            <div class = "col-md-5">
                <br />
                <form asp-action="EditStatus" method="post">
                    <div class="row">
                         <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="StatusId" class="control-label">Select status:</label>
                                <select asp-for="StatusId" asp-items="@Model.StatusesSelect" class="form-control" ></select>
                            </div>

                            <div class="form-group">
                                   <button type="submit" value="Add Status" class="btn btn-primary btn-block"></button>
                            </div>
                         </div>
                    </div>
                </form>
            </div>

            <div>
                <a asp-action="AllShipments">Back to Shipment List</a>
            </div>
        </div>
    </div>
</div>
